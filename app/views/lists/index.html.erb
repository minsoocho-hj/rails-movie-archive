<div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.squarespace-cdn.com/content/v1/5497331ae4b0148a6141bd47/1594500041049-90AK78L2HBXEL4T08WRM/7bdbc75725194a9a44d66846fc37962e.jpg?format=1500w);">
  <div class="container">
    <p>
      <span id="banner-typed-text"></span>
    </p>
    <h1 class="mb-3">My Movie archive</h1>
    <p class="mb-3">Save any kind of movies</p>
    <%= link_to "Create a new list", new_list_path, class: "btn btn-flat" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% if @lists.length == 0  %>
      <div>No List yet!</div>
    <% end %>

    <% @lists.each do |list|%>
      <div class="col-md-4 col-sm-12 mb-4">

          <%= link_to "#{list.name}", list_path(list), class: "card-category"  %>
      </div>
    <% end %>
  </div>
</div>
